# Mautic Production Environment Configuration
# Copy this file to .env.local and update with your actual values

# Application Environment
APP_ENV=prod
APP_DEBUG=0

# Database Configuration
MAUTIC_DB_HOST=db
MAUTIC_DB_PORT=3306
MAUTIC_DB_NAME=mautic
MAUTIC_DB_USER=mautic
MAUTIC_DB_PASSWORD=your_secure_password_here
MAUTIC_DB_PREFIX=

# Admin User Configuration (for initial installation)
MAUTIC_ADMIN_USERNAME=admin
MAUTIC_ADMIN_PASSWORD=Maut1cR0cks!
MAUTIC_ADMIN_EMAIL=admin@yourdomain.com
MAUTIC_ADMIN_FIRSTNAME=Admin
MAUTIC_ADMIN_LASTNAME=User

# Email Configuration
MAUTIC_MAILER_TRANSPORT=smtp
MAUTIC_MAILER_HOST=your_smtp_host
MAUTIC_MAILER_PORT=587
MAUTIC_MAILER_USER=your_smtp_username
MAUTIC_MAILER_PASSWORD=your_smtp_password
MAUTIC_MAILER_ENCRYPTION=tls
MAUTIC_MAILER_AUTH_MODE=login

# Site Configuration
MAUTIC_SITE_URL=https://yourdomain.com
MAUTIC_SECRET_KEY=your_secret_key_32_characters_long

# Cache Configuration
MAUTIC_CACHE_ADAPTER=filesystem
MAUTIC_CACHE_PREFIX=mautic

# Session Configuration
MAUTIC_SESSION_NAME=mautic
MAUTIC_SESSION_LIFETIME=3600

# Request Context (for CLI commands)
MAUTIC_REQUEST_CONTEXT_HOST=yourdomain.com
MAUTIC_REQUEST_CONTEXT_SCHEME=https
MAUTIC_REQUEST_CONTEXT_BASE_URL=
MAUTIC_REQUEST_CONTEXT_HTTP_PORT=80
MAUTIC_REQUEST_CONTEXT_HTTPS_PORT=443

# Trusted Hosts (add your domain)
MAUTIC_TRUSTED_HOSTS=yourdomain.com,www.yourdomain.com

# Trusted Proxies (if behind a proxy/load balancer)
MAUTIC_TRUSTED_PROXIES=

# Locale
MAUTIC_LOCALE=en_US

# Image and Media Paths
MAUTIC_IMAGE_PATH=media/images
MAUTIC_MEDIA_PATH=media

# Log Configuration
MAUTIC_LOG_PATH=var/logs
MAUTIC_MAX_LOG_FILES=7

# Twig Cache
MAUTIC_TWIG_CACHE_DIR=var/cache/prod/twig
