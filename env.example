# Mautic Production Environment Variables
# Copy this file to .env and customize the values for your deployment

# =============================================================================
# APPLICATION ENVIRONMENT
# =============================================================================
APP_ENV=prod
APP_DEBUG=0

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
# Main database connection
DB_HOST=db
DB_PORT=3306
DB_NAME=mautic
DB_USER=mautic
DB_PASSWORD=your_secure_database_password
DB_ROOT_PASSWORD=your_secure_root_password
DB_TABLE_PREFIX=

# Read-only database (optional - for high-traffic sites)
# DB_HOST_RO=db-replica

# =============================================================================
# SITE CONFIGURATION  
# =============================================================================
# Your public site URL (IMPORTANT: Set this correctly!)
SITE_URL=https://yourdomain.com

# Secret key for encryption (IMPORTANT: Generate a secure 32+ character string!)
SECRET_KEY=your_very_secure_secret_key_32_characters_minimum

# Locale and timezone
LOCALE=en_US
TIMEZONE=UTC

# =============================================================================
# REQUEST CONTEXT (Auto-generated from SITE_URL, but can be overridden)
# =============================================================================
REQUEST_CONTEXT_HOST=yourdomain.com
REQUEST_CONTEXT_SCHEME=https
REQUEST_CONTEXT_BASE_URL=
REQUEST_CONTEXT_HTTP_PORT=80
REQUEST_CONTEXT_HTTPS_PORT=443

# =============================================================================
# EMAIL CONFIGURATION
# =============================================================================
# Email transport DSN - examples:
# SMTP: smtp://username:password@hostname:port
# Gmail: smtp://username:password@smtp.gmail.com:587
# SendGrid: smtp://apikey:your_api_key@smtp.sendgrid.net:587
# Amazon SES: smtp://ACCESS_KEY:SECRET_KEY@email-smtp.us-east-1.amazonaws.com:587
MAILER_DSN=smtp://localhost:1025

# From email settings
MAILER_FROM_NAME=Your Organization
MAILER_FROM_EMAIL=noreply@yourdomain.com

# =============================================================================
# MESSAGING/QUEUE CONFIGURATION
# =============================================================================
# Message transport for async processing
# Options: doctrine://default, redis://redis:6379, amqp://guest:guest@rabbitmq:5672
MESSENGER_DSN_EMAIL=doctrine://default
MESSENGER_DSN_HIT=doctrine://default
MESSENGER_DSN_FAILED=doctrine://default

# =============================================================================
# CACHE CONFIGURATION
# =============================================================================
# Cache adapter
CACHE_ADAPTER=cache.adapter.filesystem

# Redis configuration (if using Redis for caching)
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=mautic_redis

# =============================================================================
# SESSION CONFIGURATION
# =============================================================================
SESSION_NAME=mautic_session

# =============================================================================
# API CONFIGURATION
# =============================================================================
API_ENABLED=true
API_ENABLE_BASIC_AUTH=true
API_OAUTH2_ACCESS_TOKEN_LIFETIME=3600
API_OAUTH2_REFRESH_TOKEN_LIFETIME=1209600

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================
# Trusted hosts (comma-separated list)
TRUSTED_HOSTS=yourdomain.com,www.yourdomain.com

# Trusted proxies (if behind a load balancer/proxy)
TRUSTED_PROXIES=

# Cookie security
COOKIE_SECURE=true
COOKIE_HTTPONLY=true
COOKIE_PATH=/
COOKIE_DOMAIN=

# =============================================================================
# BRANDING
# =============================================================================
BRAND_NAME=Your Organization
PRIMARY_BRAND_COLOR=6b63b8
THEME=blank

# =============================================================================
# PERFORMANCE SETTINGS
# =============================================================================
DEFAULT_PAGELIMIT=30
MAX_LOG_FILES=7

# =============================================================================
# IP LOOKUP SERVICE
# =============================================================================
# Options: maxmind_download, maxmind_precision, ipstack, etc.
IP_LOOKUP_SERVICE=maxmind_download
IP_LOOKUP_AUTH=

# =============================================================================
# DATABASE MIGRATIONS
# =============================================================================
MIGRATIONS_TABLE_NAME=migration_versions

# =============================================================================
# MAINTENANCE & UPDATES
# =============================================================================
UPDATE_STABILITY=stable

# =============================================================================
# ADDITIONAL SERVICES (Optional)
# =============================================================================

# SAML Configuration (if using SAML authentication)
# SAML_HOST=yourdomain.com
# SAML_PORT=443

# Google Analytics (if using)
# GOOGLE_ANALYTICS_ID=UA-XXXXXXXX-X

# Social Media API Keys (if using social features)
# FACEBOOK_APP_ID=
# FACEBOOK_APP_SECRET=
# TWITTER_API_KEY=
# TWITTER_API_SECRET=

# Elasticsearch (if using for search)
# ELASTICSEARCH_HOST=elasticsearch
# ELASTICSEARCH_PORT=9200

# =============================================================================
# COOLIFY SPECIFIC (These may be set automatically by Coolify)
# =============================================================================
# Coolify might set these automatically, but you can override them:
# SERVICE_FQDN_MAUTIC=yourdomain.com
